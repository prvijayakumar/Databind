<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--TextView Styles-->
    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textview.textsize10">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">10sp</item>
    <item name="android:layout_marginLeft">8dp</item>
    <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--EditText Styles-->
    <style name="edittext">
        <item name="android:background">@drawable/edittextbg_normal</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginRight">8sp</item>
        <item name="android:textColor">#363636</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingRight">12sp</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edittext.border">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textNoSuggestions</item>

    </style>

    <style name="submitbtn">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/commonbtn</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>


    </style>

    <style name="textviewerr">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">10dp</item>
    <item name="android:textColor">@color/errcolor</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginRight">8dp</item>
    <item name="android:layout_gravity">end</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="spinner1">
        <item name="android:background">@drawable/spinner_drawable</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>

